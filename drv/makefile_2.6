ifneq ($(KERNELRELEASE),)
obj-m := eqnx.o
eqnx-objs := sst.o  

EXTRA_CFLAGS += $(MCFLAGS) $(INCLUDES)
else
KERNEL_SRC=$(KSRC)
ifneq ($(origin KERNELOBJ), undefined)
	KO = O=$(KERNELOBJ)
endif
SUBDIRS=$(PWD)
all: modules

build: all

modules:
	$(MAKE) ${KO} -C $(KERNEL_SRC) SUBDIRS=$(SUBDIRS) modules

clean:
	@-rm -f $(DRV) $(OBJS) *.o *.ko *.mod.c
	@-rm -f ./*~

clobber:
	@-rm -f $(DRV)
	@-rm -f ./*~
	@-rm -f $(OBJS) $(DRV) *.o *.ko *mod.c
endif
